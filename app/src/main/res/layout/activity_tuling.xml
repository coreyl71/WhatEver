<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_tuling_input"
        android:layout_marginBottom="10dp"
        android:id="@+id/rcv_tuling_layout"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_tuling_input"
        android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_confirm"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            android:id="@+id/et_message_in"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirm"
            android:layout_alignParentRight="true"
            android:text="confirm"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>