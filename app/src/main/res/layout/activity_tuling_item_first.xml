<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:id="@+id/activity_tuling_item_first">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_icon_tuling"
        android:src="@mipmap/tuling"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_tv"
        android:layout_toRightOf="@+id/iv_icon_tuling"
        android:id="@+id/tv_message_tuling"
        android:layout_marginLeft="20dp"
        android:text="图灵消息"
        android:textSize="30sp"/>

</RelativeLayout>