<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_search_lv_item"
        android:text="这里是正标题测试下单行标题的效果看一看现在是两行的显示效果"
        android:ellipsize="end"
        android:textSize="30sp"
        android:lines="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_description_search_lv_item"
        android:layout_below="@+id/tv_title_search_lv_item"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ctime_search_lv_item"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:text="2016年6月25日"
        android:layout_below="@+id/tv_title_search_lv_item"
        android:layout_toRightOf="@+id/tv_description_search_lv_item"
        android:layout_marginLeft="40dp"/>
</RelativeLayout>