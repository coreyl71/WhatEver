<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_recommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="推荐"
        android:background="#fff"
        android:textSize="30sp"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_recommand"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_title_recommand"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_recommand">

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/rcv_content_recommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>